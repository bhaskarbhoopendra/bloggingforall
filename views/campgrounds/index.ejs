<% include ../partials/header %>


<div class="container">
   <header class="jumbotron">
       <h1>Welcome to the BloggingForAll</h1>
       <p class="text-muted">Here are some of the blogs written by some people!</p>
       <p>
         <a class="btn btn-md btn-primary" href="/campgrounds/new">Add New Blog</a>
       </p>
      

   </header>
 
   
   <div class="row">
      <% campgrounds.forEach(function(campground){ %>
   <div class="col-md-3 col-sm-6">
      <div class="text-center" >
         <img class="img-thumbnail img-fluid img-rounded"  src="<%=campground.image %>">
            <div  class="caption">
             <h4 class="name"> <%= campground.name%> </h4>
            </div>
            <p>
               <a href="/campgrounds/<%=campground._id %>" class="btn btn-md btn-primary">More Info</a>
            </p>
      </div>
   </div>
      
       <% }); %>
   </div>
   
</div>

<% include ../partials/footer %>

